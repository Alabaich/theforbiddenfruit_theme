<style>
  .product-feature-section {
    max-width: 100%;
  }

  .product-feature-container {
    display: flex;
    align-items: center;
    gap: 50px;
  }

  .product-feature-container.reverse {
    flex-direction: row-reverse;
  }

  .product-feature-image {
    flex: 1;
  }

  .product-feature-section .product-feature-button {
    margin-top: 50px;
    background-color: var(--product-accent-color, #2c2d2c);
    border: 1px solid var(--product-accent-color, #2c2d2c);
  }

    .product-feature-section .product-feature-button:hover {
        background-color: transparent;
        color: var(--product-accent-color, #2c2d2c);
    }

  .product-feature-image img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    object-fit: cover;
  }

  .product-feature-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .product-feature-upper-title {
    color: #717171;
    font-family: Manrope;
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: -0.32px;
    margin: 0;
  }

  .product-feature-title {
    text-align: left;
    color: #2c2d2c;
    font-family: Manrope;
    font-size: 48px;
    font-weight: 700;
    line-height: 1.1;
    margin: 0;
  }

  .product-feature-subtitle {
    text-align: left;
    color: #717171;
    font-family: Manrope;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.5;
    margin: 0;
  }

  @media (max-width: 968px) {
    .product-feature-container {
      flex-direction: column;
    }

    .product-feature-container.reverse {
      flex-direction: column;
    }

    .product-feature-title {
      font-size: 36px;
    }
  }

  @media (max-width: 769px) {
    .product-feature-section .product-feature-container .product-feature-image {
      width: 100%;
    }

    .product-feature-section .product-feature-container {
      gap: 25px;
    }

    .product-feature-title {
      font-size: 28px;
    }
  }
</style>

<section class="product-feature-section pageWidth verticalPadding" id="Section-{{ section.id }}">
  <div class="product-feature-container {% if section.settings.reverse_layout %}reverse{% endif %}">
    <div class="product-feature-image">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'product-feature-img', alt: section.settings.image.alt | escape }}
      {% else %}
        <div style="background: #f0f0f0; height: 400px; border-radius: 10px; display: flex; align-items: center; justify-content: center; color: #999;">
          Product Feature Image
        </div>
      {% endif %}
    </div>

    <div class="product-feature-content">
      {% if section.settings.upper_title != blank %}
        <p class="product-feature-upper-title">{{ section.settings.upper_title }}</p>
      {% endif %}

      {% if section.settings.title != blank %}
        <h2 class="product-feature-title">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="product-feature-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="product-feature-button greenButton">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Product Feature",
    "tag": "section",
    "class": "product-sections-feature",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Feature Image"
      },
      {
        "type": "checkbox",
        "id": "reverse_layout",
        "label": "Reverse layout",
        "default": false,
        "info": "Image on right, content on left"
      },
      {
        "type": "text",
        "id": "upper_title",
        "label": "Upper Title",
        "default": "FEATURE HIGHLIGHT"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Feature Title",
        "default": "Product Feature"
      }, {
        "type": "textarea",
        "id": "subtitle",
        "label": "Feature Description",
        "default": "Discover the unique features and benefits of our product that make it stand out from the rest."
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Learn More"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Product Feature",
        "category": "Product Sections"
      }
    ]
  }
{% endschema %}