<style>
  .switch-side-section {
    width: 100%;
  }

  .switch-side-container {
    display: flex;
    align-items: center;
    gap: 50px;
  }

  .switch-side-container.reverse {
    flex-direction: row-reverse;
  }

  .switch-side-image {
    flex: 1;
  }

  .switch-side-section .greenButton {
    margin-top: 50px;
  }

  .switch-side-image img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    object-fit: cover;
  }

  .switch-side-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .upper-title {
    color: #717171;
    font-family: Manrope;
    font-size: 16px;
    font-weight: 400;
  }

  .switch-side-content h1 {
    text-align: left;
    color: #2c2d2c;
  }

  .subtitle {
    text-align: left;
  }

  @media (max-width: 968px) {
    .switch-side-container {
      flex-direction: column;
    }

    .switch-side-container.reverse {
      flex-direction: column;
    }
  }
</style>

<section class="switch-side-section pageWidth">
  <div class="switch-side-container {% if section.settings.reverse_layout %}reverse{% endif %}">
    <div class="switch-side-image">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'switch-side-img' }}
      {% else %}
        <div style="background: #f0f0f0; height: 400px; border-radius: 10px; display: flex; align-items: center; justify-content: center;"></div>
      {% endif %}
    </div>

    <div class="switch-side-content">
      {% if section.settings.upper_title != blank %}
        <p class="upper-title">{{ section.settings.upper_title }}</p>
      {% endif %}

      {% if section.settings.title != blank %}
        <h1>{{ section.settings.title }}</h1>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="greenButton">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Switch Side Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "checkbox",
        "id": "reverse_layout",
        "label": "Reverse layout",
        "default": false,
        "info": "Image on right, content on left"
      },
      {
        "type": "text",
        "id": "upper_title",
        "label": "Upper Title",
        "default": "UPPER TITLE"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Main Heading Here"
      }, {
        "type": "textarea",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Your descriptive text goes here. You can add multiple lines of text to describe your product or service."
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop Now"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Switch Side Image",
        "category": "Custom"
      }
    ]
  }
{% endschema %}