{%- liquid
  assign selected_bg = product.metafields.custom.second_accent_color
  
  if selected_bg == blank
    assign selected_bg = product.metafields.custom.background_color
  endif
  
  if selected_bg == blank
    assign selected_bg = section.settings.default_background_color | default: '#2c2d2c'
  endif
-%}

<div class="custom-sticky-product-header-wrapper" data-section-id="{{ section.id }}">
  <div class="sticky-footer-container pageWidth">
    <div class="sticky-footer-left">
      <h2 class="sticky-product-title-bottom-footer">{{ product.title | truncate: 35 }}</h2>
      <div class="sticky-footer-menu">
        <a href="#science" class="sticky-footer-link">Science</a>
        <a href="#reviews" class="sticky-footer-link">Reviews</a>
        <a href="#faq" class="sticky-footer-link">FAQ</a>
        <a href="#subscription" class="sticky-footer-link">Subscription</a>
      </div>
    </div>
    <div class="sticky-footer-actions">
      <div class="sticky-footer-price-section">
        {% if product.compare_at_price > product.price %}
          <span class="sticky-footer-price-old">{{ product.compare_at_price | money }}</span>
        {% endif %}
        <span class="sticky-footer-price-current">{{ product.price | money }}</span>
      </div>
      {%- form 'product', product, id: 'sticky-product-form', class: 'sticky-form' -%}
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <button type="submit" name="add" class="sticky-add-to-cart-button">
          <span>Add To Cart</span>
        </button>
      {%- endform -%}
    </div>
  </div>
</div>

<style>
  .custom-sticky-product-header-wrapper {
    background-color: {{ selected_bg }};
    color: #fff;
  }

  .custom-sticky-product-header-wrapper.is-sticky-clone {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    transform: translateY(-100%);
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    display: none;
  }

  .custom-sticky-product-header-wrapper.is-sticky-clone.is-visible {
    transform: translateY(0);
  }

  .sticky-footer-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
      width: 100%;
  }

  .sticky-footer-left {
    display: flex;
    align-items: center;
    gap: 24px;
  }
  
  .sticky-product-title-bottom-footer {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
    white-space: nowrap;
    color: #fff;
  }
  
  .sticky-footer-menu {
    display: flex;
    gap: 16px;
  }

  .sticky-footer-link {
    font-size: 0.9rem;
    text-decoration: none;
    color: inherit;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }
  
  .sticky-footer-link:hover {
    opacity: 1;
    text-decoration: underline;
  }

  .sticky-footer-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .sticky-footer-price-section {
    display: flex;
    align-items: baseline;
    gap: 8px;
  }

  .sticky-footer-price-old {
    text-decoration: line-through;
    opacity: 0.7;
    font-size: 0.9rem;
  }
  
  .sticky-footer-price-current {
    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
  }
  
  .sticky-add-to-cart-button {
    background-color: #fff;
    color: #2c2d2c;
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    font-size: 1rem;
    transition: background-color 0.2s ease;
  }
  
  .sticky-add-to-cart-button:hover {
    filter: brightness(1.1);
  }

  @media (max-width: 768px) {
    .sticky-footer-menu, .sticky-product-title-bottom-footer {
      display: none;
    }
    .sticky-footer-container {
      justify-content: center;
    }
    .sticky-footer-left {
       display: none;
    }
    .sticky-footer-actions {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sectionId = '{{ section.id }}';
    const originalWrapper = document.querySelector(`.custom-sticky-product-header-wrapper[data-section-id="${sectionId}"]`);

    if (!originalWrapper) {
      console.log('Sticky header original wrapper not found. Exiting.');
      return;
    }

    const stickyClone = originalWrapper.cloneNode(true);
    stickyClone.classList.add('is-sticky-clone');
    stickyClone.style.display = 'block';
    
    document.body.appendChild(stickyClone);

    const handleScroll = () => {
      const triggerPoint = originalWrapper.getBoundingClientRect().top;
      
      if (triggerPoint <= 0) {
        stickyClone.classList.add('is-visible');
      } else {
        stickyClone.classList.remove('is-visible');
      }
    };
    
    window.addEventListener('scroll', handleScroll, { passive: true });
    
    handleScroll();
  });
</script>

{% schema %}
{
  "name": "Sticky Product Header",
  "settings": [
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "default_background_color",
      "label": "Fallback Background Color",
      "default": "#2c2d2c",
      "info": "Used if product metafields are empty"
    }
  ],
  "presets": [
    {
      "name": "Sticky Product Header"
    }
  ]
}
{% endschema %}