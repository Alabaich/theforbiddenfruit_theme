<style>
  .article-container {
    max-width: 960px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .article-image {
    margin: 0 -24px 48px;
    height: 400px;
    overflow: hidden;
  }

  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 16px;
  }

  .article-meta {
    color: #115C11;
    font-family: Manrope, sans-serif;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    letter-spacing: -0.4px;
    text-transform: capitalize;
    margin-bottom: 8px;
  }

  .article-header {
    text-align: left;
    margin-bottom: 24px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .article-title {
    font-family: Manrope, sans-serif;
    font-size: 2.5em;
    font-weight: normal;
    line-height: 1.2;
    margin: 0;
  }

  .article-content {
    font-family: Manrope, sans-serif;
    color: #333;
  }

  .article-content h3 {
    font-family: Manrope, sans-serif;
    font-size: 1.1em;
    font-weight: bold;
    margin-top: 2em;
    margin-bottom: 0.5em;
  }
  
  .article-content p {
    color: #616161;
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    letter-spacing: -0.36px;
    margin-bottom: 1em;
  }
</style>

<div class="article-container">
  {% if article.image %}
    <div class="article-image">
      <img
        sizes="(min-width: 640px) 960px, (min-width: 480px) 720px, 450px"
        srcset="
          {{ article | img_url: '450x' }} 450w,
          {{ article | img_url: '720x' }} 720w,
          {{ article | img_url: '960x' }} 960w
        "
        src="{{ article | img_url: '960x' }}"
        alt="{{ article.image.alt | escape }}"
        loading="lazy"
      >
    </div>
  {% endif %}

  <div class="article-header">
    <div class="article-meta">
      {% if article.author %}{{ article.user.name }} / {% endif %}{{ article.published_at | date: '%m/%d/%Y' }}
    </div>
    <h1 class="article-title">{{ article.title }}</h1>
  </div>

  <div class="article-content">
    {{ article.content }}
  </div>
</div>