{% schema %}
  {
    "name": "t:sections.footer.name",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Footer Logo"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "url",
        "id": "terms_of_service_link",
        "label": "Terms of Service Link"
      },
      {
        "type": "text",
        "id": "terms_of_service_text",
        "label": "Terms of Service Text",
        "default": "Terms of Service"
      },
      {
        "type": "url",
        "id": "privacy_policy_link",
        "label": "Privacy Policy Link"
      },
      {
        "type": "text",
        "id": "privacy_policy_text",
        "label": "Privacy Policy Text",
        "default": "Privacy Policy"
      }
    ],
    "blocks": [
      {
        "type": "newsletter",
        "name": "Newsletter",
        "limit": 1
      },
      {
        "type": "link_list",
        "name": "Link list",
        "settings": [
          {
            "type": "link_list",
            "id": "menu",
            "label": "Menu",
            "default": "footer"
          }
        ]
      },
      {
        "type": "text_block",
        "name": "Text block",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Add custom text here.</p>"
          }
        ]
      }
    ]
  }
{% endschema %}