<style>
  .customFooter {
    background-color: #0A330A;
    color: #fff;
    padding-top: 20px;
  }

  .customFooter__inner {
    display: flex;
    justify-content: space-between;
    gap: 40px;
    font-family: Manrope;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 25px;
    max-width: 35%;
  }

  .footer-left .footer-logo img {
    max-width: 250px;
  }

  .footer-right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 30%;
  }

  .footer-right .footer-menu-list {
    display: flex;
    gap: 25px;
    text-decoration: none;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  .footer-right .footer-menu-list a {
    color: #fff;
    text-decoration: none;
    transition: opacity 0.3s ease;
    font-size: 20px;
    font-weight: 400;
  }

  .footer-right .footer-menu-list a:hover {
    opacity: 0.8;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 20px;
  }

  .footer-bottom__left {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .footer-bottom__links {
    display: flex;
    gap: 20px;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  .footer-bottom__links a {
    color: #CCC;
    font-family: Inter;
    font-size: 14px;
    font-weight: 400;
    text-decoration: none;
  }

  .footer-bottom__right {
    display: flex;
  }

  .footer-bottom__socials {
    display: flex;
    gap: 15px;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  .footer-bottom__socials a {
    display: block;
    color: #fff;
  }

  .footer-bottom__socials a svg {
    width: 24px;
    height: 24px;
  }

  .newsletter-block {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .newsletter-title {
    font-size: 24px;
    font-weight: 600;
    color: #fff;
  }

  .newsletter-text {
    font-size: 16px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.8);
  }

  .newsletter-input-wrapper {
    display: flex;
    align-items: center;
    border-radius: 50px;
    background-color: #fff;
    padding: 10px;
  }

  #footer-newsletter-form {
    width: 80%;
  }

  #footer-email {
    width: 100%;
    border: none;
    background: transparent;
    padding: 0 10px;
    color: #0A330A;
    font-size: 16px;
  }

  #footer-email:focus {
    outline: none;
  }

  #footer-email::placeholder {
    color: #a0a0a0;
  }

  .newsletter-input-wrapper button {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 26px;
    height: 26px;
  }

  .newsletter-input-wrapper button svg path {
    stroke: #172D2F;
  }

  .newsletter-success-message {
    margin-top: 10px;
    color: #b3f0b3;
  }

  .newsletter-input-wrapper button:hover svg path {
    stroke: #000;
    transition: stroke 0.3s ease;
  }

  .newsletter-input-wrapper:has(#footer-email:focus) {
    box-shadow: 0 0 0 2px #4CAF50;
    transition: box-shadow 0.2s ease;
  }

  .newsletter-input-wrapper {
    transition: box-shadow 0.2s ease;
  }

  .footer-nav-text {
    color: #CCC;
    font-family: Inter;
    font-size: 14px;
    font-weight: 400;
  }

  @media (max-width: 769px) {
    .customFooter__inner {
      flex-direction: column;
      gap: 30px;
    }

    .footer-left,
    .footer-right {
      max-width: 100%;
      width: 100%;
    }

    .footer-left {
      gap: 20px;
      order: 2;
    }

    .footer-right {
      order: 2;
      gap: 25px;
    }

    .footer-left .footer-logo img {
      max-width: 200px;
      margin: 0 auto;
      display: block;
    }

    .footer-right .footer-menu-list {
      flex-direction: column;
      gap: 15px;
      text-align: center;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 20px;
      text-align: center;
      padding-top: 30px;
    }

    .footer-bottom__left {
      flex-direction: column;
      gap: 15px;
    }

    .footer-bottom__links {
      justify-content: center;
      flex-wrap: wrap;
      gap: 15px;
    }

    .newsletter-title {
      font-size: 20px;
      text-align: center;
    }

    .newsletter-text {
      font-size: 14px;
      text-align: center;
    }

    #footer-newsletter-form {
      width: 100%;
    }

    .footer-nav-text {
      font-size: 13px;
      text-align: center;
    }

    .footer-left p {
      text-align: center;
    }

    .newsletter-block {
      text-align: center;
    }

    .footer-bottom__socials {
      justify-content: center;
    }
  }
</style>

<div class="customFooter">
  <div class="pageWidth customFooter__inner">
    <div class="footer-left">
      {% if section.settings.logo != blank %}
        <div class="footer-logo">
          <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}">
        </div>
      {% else %}
        <div class="footer-logo">
          {{ shop.name }}
        </div>
      {% endif %}

      {% if section.settings.description != blank %}
        <p>
          {{ section.settings.description }}
        </p>
      {% endif %}

      <div class="newsletter-block">
        <div class="newsletter-title">Newsletter</div>
        <p class="newsletter-text">Subscribe to our Newsletter to get a 5% discount</p>
        {% form 'customer'
          , id: 'footer-newsletter-form' %}
          <input
            type="hidden"
            name="contact[tags]"
            value="newsletter">
          <div class="newsletter-input-wrapper">
            <input
              type="email"
              name="contact[email]"
              id="footer-email"
              placeholder="Your email"
              aria-label="Your email">
            <button type="submit" aria-label="Subscribe">
              <svg
                width="26"
                height="26"
                viewBox="0 0 26 26"
                fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M12.665 12.6742H6.33005M6.15048 13.5046L5.10386 16.631C4.53063 18.3433 4.24402 19.1995 4.4497 19.7267C4.62832 20.1846 5.01195 20.5317 5.48534 20.6639C6.03045 20.8159 6.85379 20.4454 8.50045 19.7045L19.0571 14.954C20.6644 14.2306 21.468 13.8691 21.7164 13.3667C21.9322 12.9302 21.9322 12.418 21.7164 11.9816C21.468 11.4793 20.6644 11.1176 19.0571 10.3943L8.48225 5.63566C6.84054 4.8969 6.01969 4.52752 5.47512 4.67905C5.00218 4.81064 4.61859 5.15684 4.43935 5.61385C4.23295 6.14009 4.51651 6.99439 5.08362 8.703L6.15252 11.9234C6.24991 12.2169 6.29862 12.3637 6.31784 12.5137C6.3349 12.6469 6.33472 12.7817 6.31733 12.9148C6.29771 13.0648 6.24864 13.2114 6.15048 13.5046Z"
                  stroke="#172D2F"
                  stroke-linecap="round"
                  stroke-linejoin="round" />
              </svg>
            </button>
          </div>
          {% if form.posted_successfully? %}
            <p class="newsletter-success-message">Thank You For Subscribing</p>
          {% endif %}
        {% endform %}
      </div>
    </div>

    <div class="footer-right">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'link_list' %}
            {% assign menu = block.settings.menu %}
            {% if linklists[menu].links.size > 0 %}
              <div class="footer-nav">
                <ul class="footer-menu-list">
                  {% for link in linklists[menu].links %}
                    <li>
                      <a href="{{ link.url }}">
                        {{ link.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
          {% when 'text_block' %}
            <div class="footer-nav-text">
              {{ block.settings.text }}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>

  <div class="pageWidth footer-bottom">
    <div class="footer-bottom__left">
      <div class="footer-bottom__copyright">
        &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}
      </div>
      <ul class="footer-bottom__links">
        {% if section.settings.terms_of_service_link != blank %}
          <li>
            <a href="{{ section.settings.terms_of_service_link }}">
