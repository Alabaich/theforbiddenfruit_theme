<style>
  .content-with-media {
    max-width: 100%;
  }

  .content-with-media-container {
    display: flex;
    align-items: stretch;
    gap: 50px;
  }

  .content-with-media-container.reverse {
    flex-direction: row-reverse;
  }

  .content-with-media-column-image {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  .content-with-media-image-wrapper img {
    width: 100%;
    border-radius: 10px;
    max-height: 350px;
    object-fit: cover;
  }

  .content-with-media .achievements-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 25px;
    width: 100%;
  }

  .content-with-media .achievement-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 25px 35px;
    border-radius: 10px;
    background: rgba(17, 92, 17, 0.10);
  }

  .content-with-media .achievement-number {
    color: #000;
    font-family: Manrope;
    font-size: 36px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    text-transform: capitalize;
  }

  .content-with-media .achievement-text {
    color: #616161;
    font-family: Manrope;
    font-size: 16px;
    font-weight: 500;
    text-transform: capitalize;
  }

  .content-with-media .content-with-media-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .content-with-media-upper-title {
    color: #717171;
    font-family: Manrope;
    font-size: 16px;
    font-weight: 400;
  }

  .content-with-media-content h1 {
    text-align: left;
    color: #2c2d2c;
  }

  .content-with-media-content .subtitle {
    text-align: left;
  }

  .content-with-media-button {
    margin-top: 50px;
  }

  .content-with-media-bottom-text {
    margin-top: auto;
  }

  @media (max-width: 968px) {
    .content-with-media-container {
      flex-direction: column;
    }

    .content-with-media-container.reverse {
      flex-direction: column;
    }

    .content-with-media .achievements-grid {
      gap: 15px;
    }

    .content-with-media-column-image {
      gap: 15px;
    }
  }

  @media (max-width: 769px) {
    .content-with-media-container {
      gap: 25px;
    }
    .content-with-media-column-image {
      width: 100%;
    }
    .achievements-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<section class="content-with-media pageWidth">
  <div class="content-with-media-container {% if section.settings.reverse_layout %}reverse{% endif %}">
    <div class="content-with-media-column-image">
      <div class="content-with-media-image-wrapper">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'content-with-media-img' }}
        {% else %}
          <div style="background: #f0f0f0; height: 400px; border-radius: 10px; display: flex; align-items: center; justify-content: center;"></div>
        {% endif %}
      </div>

      <div class="achievements-grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'achievement' %}
              <div class="achievement-item">
                {% if block.settings.number != blank %}
                  <div class="achievement-number">{{ block.settings.number }}</div>
                {% endif %}
                {% if block.settings.text != blank %}
                  <div class="achievement-text">{{ block.settings.text }}</div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>

    <div class="content-with-media-content">
      {% if section.settings.upper_title != blank %}
        <p class="content-with-media-upper-title">{{ section.settings.upper_title }}</p>
      {% endif %}

      {% if section.settings.title != blank %}
        <h1>{{ section.settings.title }}</h1>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="greenButton content-with-media-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}

      {% if section.settings.bottom_text != blank %}
        <p class="content-with-media-bottom-text subtitle">{{ section.settings.bottom_text }}</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Content with Media",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "checkbox",
        "id": "reverse_layout",
        "label": "Reverse layout",
        "default": false,
        "info": "Image on right, content on left"
      },
      {
        "type": "text",
        "id": "upper_title",
        "label": "Upper Title",
        "default": "UPPER TITLE"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Main Heading Here"
      }, {
        "type": "textarea",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Your descriptive text goes here. You can add multiple lines of text to describe your product or service."
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop Now"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "text",
        "id": "bottom_text",
        "label": "Bottom Text",
        "default": "This is the bottom text."
      }
    ],
    "blocks": [
      {
        "type": "achievement",
        "name": "Achievement Item",
        "limit": 4,
        "settings": [
          {
            "type": "text",
            "id": "number",
            "label": "Number",
            "default": "5+"
          }, {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Years Experience"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Content with Media",
        "category": "Text",
        "blocks": [
          {
            "type": "achievement",
            "settings": {
              "number": "5+",
              "text": "Years Experience"
            }
          }, {
            "type": "achievement",
            "settings": {
              "number": "5K+",
              "text": "Trusted Customers"
            }
          }, {
            "type": "achievement",
            "settings": {
              "number": "100+",
              "text": "Positive Reviews"
            }
          }, {
            "type": "achievement",
            "settings": {
              "number": "40+",
              "text": "Available Items"
            }
          }
        ]
      }
    ]
  }
{% endschema %}