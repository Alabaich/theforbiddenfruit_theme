<style>
  .contact-page-section {
    position: relative;
    width: 100vw;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    overflow: hidden;
    padding-bottom: 100px;
  }

  .contact-page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 100px 50px;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    gap: 50px;
  }

  .contact-page-title-wrapper {
    flex-shrink: 0;
    width: 40%;
  }

  .contact-page-title {
    color: #1A1A1A;
    font-family: Manrope;
    font-size: 52px;
    font-weight: 400;
  }

  .contact-page-text-wrapper {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .contact-page-text {
    color: #616161;
    font-family: Manrope;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.5;
  }

  .contact-page-button {
    display: inline-block;
    padding: 12px 24px;
    background-color: #0A330A;
    color: #fff;
    text-decoration: none;
    font-family: Manrope;
    font-weight: 500;
    border-radius: 50px;
  }

  .contact-page-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 600px;
    height: 600px;
    background-color: #E6F0E6;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    z-index: 0;
  }

  @media (max-width: 768px) {
    .contact-page-header {
      flex-direction: column;
      align-items: flex-start;
      padding: 50px 20px;
      gap: 20px;
    }

    .contact-page-title-wrapper {
      width: 100%;
    }

    .contact-page-title {
      font-size: 40px;
      margin-bottom: 0;
    }

    .contact-page-text-wrapper {
      padding-left: 0;
    }

    .contact-page-section::before {
      display: none;
    }
  }
</style>

<div class="contact-page-section">
  <div class="contact-page-header">
    <div class="contact-page-title-wrapper">
      <h1 class="contact-page-title">{{ section.settings.title }}</h1>
    </div>
    <div class="contact-page-text-wrapper">
      <p class="contact-page-text">{{ section.settings.description }}</p>
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="contact-page-button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Contact Page Hero",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Contact Us"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Welcome to The Forbidden Fruit, where nature's purest treasures meet your journey to health, beauty, and vitality. Inspired by the wisdom of native cultures and rooted in the belief that nature holds the key to transformation, we are dedicated to sharing organic, sustainable, and life-enhancing remedies with the world."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Contact Us"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Contact Page Hero"
      }
    ]
  }
{% endschema %}