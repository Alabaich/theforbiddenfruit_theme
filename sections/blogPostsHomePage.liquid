<style>
  .blog-posts-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 50px;
    align-items: center;
  }

  .blog-posts-heading {
    text-align: center;
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 20px;
    max-width: 1000px;
    width: 100%;
  }

  .blog-posts-heading .subtitle {
    text-align: center;
    margin: 0;
  }

  .blog-tags-filter {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 10px;
    background: #115C11;
    border-radius: 16px;
    padding: 8px;
  }

  .blog-tag {
    display: inline-flex;
    padding: 8px 20px;
    justify-content: center;
    align-items: center;
    border: 0 solid rgba(255, 255, 255, 0.3);
    border-radius: 20px;
    background: transparent;
    color: white;
    font-family: 'Manrope'
    , sans-serif;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .blog-tag:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .blog-tag.active {
    background: white;
    border-color: white;
    color: #115C11;
    font-weight: 500;
  }

  .blog-posts-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 50px;
  }

  .main-blog-post {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 50px;
    background: #F8F8F8;
    border-radius: 12px;
    padding: 0;
  }

  .main-post-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 50px;
    padding: 40px;
  }

  .main-post-title {
    color: #2c2d2c;
    font-family: 'Onest'
    , sans-serif;
    font-size: 52px;
    font-style: normal;
    font-weight: 500;
    line-height: 110%;
    letter-spacing: -1.04px;
    text-transform: capitalize;
    margin: 0;
  }

  .main-post-excerpt {
    color: #616161;
    font-family: 'Manrope'
    , sans-serif;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    margin: 0;
  }

  .main-post-image {
    flex: 1;
    width: 100%;
    height: 400px;
    border-radius: 0 10px 10px 0;
    overflow: hidden;
    margin: 0;
  }

  .main-post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .main-post-image:hover img {
    transform: scale(1.05);
  }

  .blog-posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 50px;
    width: 100%;
  }

  .blog-post-card {
    display: flex;
    flex-direction: column;
    gap: 15px;
    position: relative;
  }

  .post-image {
    width: 100%;
    height: 250px;
    border-radius: 10px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-image:hover img {
    transform: scale(1.05);
  }

  .post-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .post-title {
    font-family: 'Manrope'
    , sans-serif;
    font-size: 20px;
    font-weight: 600;
    margin: 0;
    padding-right: 80px;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 15px;
    font-family: 'Onest'
    , sans-serif;
    font-size: 14px;
    color: #616161;
    position: relative;
  }

  .post-date {
    margin: 0;
  }

  .read-time {
    position: absolute;
    top: 0;
    right: 0;
    margin: 0;
    color: #616161;
    font-family: 'Onest'
    , sans-serif;
    font-size: 14px;
  }

  .read-more {
    color: #4CAF50;
    font-family: 'Onest'
    , sans-serif;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    margin-top: 10px;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  .blog-button-container {
    display: flex;
    justify-content: flex-end;
    width: 100%;
    margin-top: 30px;
  }

  @media (max-width: 968px) {
    .main-blog-post {
      flex-direction: column-reverse;
      gap: 0;
    }

    .main-post-content {
      padding: 30px;
      gap: 30px;
    }

    .main-post-title {
      font-size: 36px;
    }

    .blog-posts-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .main-post-image {
      height: 300px;
    }

    .blog-tags-filter {
      padding: 12px;
    }

    .post-title {
      padding-right: 70px;
    }
  }

  @media (max-width: 768px) {
    .main-post-content {
      padding: 25px;
    }

    .main-post-title {
      font-size: 28px;
    }

    .blog-posts-grid {
      grid-template-columns: 1fr;
      gap: 25px;
    }

    .main-post-image {
      height: 250px;
    }

    .post-image {
      height: 200px;
    }

    .blog-button-container {
      justify-content: center;
    }

    .blog-tags-filter {
      gap: 8px;
      padding: 10px;
    }

    .blog-tag {
      padding: 8px 12px;
      font-size: 12px;
    }

    .post-title {
      padding-right: 60px;
    }

    .read-time {
      position: static;
      margin-top: 5px;
    }
  }
</style>

<section class="blog-posts-section pageWidth">
  <div class="blog-posts-heading">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <!-- Фильтр по тегам -->
    <div class="blog-tags-filter">
      <button class="blog-tag active" data-tag="all">All</button>
      {% assign blog = blogs[section.settings.blog] %}
      {% if blog.all_tags.size > 0 %}
        {% for tag in blog.all_tags limit: 8 %}
          <button class="blog-tag" data-tag="{{ tag | handleize }}">{{ tag }}</button>
        {% endfor %}
      {% endif %}
    </div>
  </div>

  <div class="blog-posts-container">
    {% assign blog = blogs[section.settings.blog] %}

      {% if blog.articles_count > 0 %}
      <!-- Главный пост -->
      {% assign main_post = blog.articles.first %}
      <article class="main-blog-post" data-tags="{% for tag in main_post.tags %}{{ tag | handleize }} {% endfor %}">
        <div class="main-post-content">
          <h2 class="main-post-title">
            <a href="{{ main_post.url }}" style="color: inherit; text-decoration: none;">
              {{ main_post.title }}
            </a>
          </h2>

          {% if main_post.excerpt != blank %}
            <p class="main-post-excerpt">{{ main_post.excerpt | strip_html | truncate: 150 }}</p>
          {% elsif main_post.content != blank %}
            <p class="main-post-excerpt">{{ main_post.content | strip_html | truncate: 150 }}</p>
          {% endif %}

          <a
            href="{{ main_post.url }}"
            class="greenButton"
            style="align-self: flex-start;">
            Read more
          </a>
        </div>

        <a href="{{ main_post.url }}" class="main-post-image">
          {% if main_post.image %}
            <img
              src="{{ main_post.image | img_url: '600x400' }}"
              alt="{{ main_post.title }}"
              loading="lazy">
          {% else %}
            <div style="background: #f0f0f0; height: 100%; display: flex; align-items: center; justify-content: center; border-radius: 12px;">
              <span>No image</span>
            </div>
          {% endif %}
        </a>
      </article>

      <!-- Сетка постов -->
      <div class="blog-posts-grid">
        {% for article in blog.articles offset: 1 limit: 3 %}
          <article class="blog-post-card" data-tags="{% for tag in article.tags %}{{ tag | handleize }} {% endfor %}">
            <a href="{{ article.url }}" class="post-image">
              {% if article.image %}
                <img
                  src="{{ article.image | img_url: '400x250' }}"
                  alt="{{ article.title }}"
                  loading="lazy">
              {% else %}
                <div style="background: #f0f0f0; height: 100%; display: flex; align-items: center; justify-content: center; border-radius: 10px;">
                  <span>No image</span>
                </div>
              {% endif %}
            </a>

            <div class="post-content">
              <h3 class="post-title">
                <a href="{{ article.url }}" style="color: inherit; text-decoration: none;">
                  {{ article.title }}
                </a>
              </h3>

              <div class="post-meta">
                <p class="post-date">{{ article.published_at | date: "%B %d, %Y" }}</p>
                <p class="read-time">{{ article.content | strip_html | number_of_words | divided_by: 200 | plus: 1 }} min read</p>
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    {% else %}
      <!-- Заглушки -->
      <article class="main-blog-post">
        <div class="main-post-content">
          <h2 class="main-post-title">Main Blog Post Title</h2>
          <p class="main-post-excerpt">This is a summary of the main blog post that will appear on the homepage...</p>
          <a
            href="#"
            class="greenButton"
            style="align-self: flex-start;">
            Read more
          </a>
        </div>

        <div class="main-post-image">
          <div style="background: #f0f0f0; height: 100%; display: flex; align-items: center; justify-content: center; border-radius: 12px;">
            <span>Main post image</span>
          </div>
        </div>
      </article>

      <div class="blog-posts-grid">
        {% for i in (1..3) %}
          <article class="blog-post-card">
            <div class="post-image">
              <div style="background: #f0f0f0; height: 250px; display: flex; align-items: center; justify-content: center; border-radius: 10px;">
                <span>Post image {{ i }}</span>
              </div>
            </div>

            <div class="post-content">
              <h3 class="post-title">Blog Post Title {{ i }}</h3>
              <div class="post-meta">
                <p class="post-date">January {{ i | plus: 10 }}, 2024</p>
                <p class="read-time">3 min read</p>
              </div>
            </div>
          </article>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <div class="blog-button-container">
        <a href="{{ section.settings.button_link }}" class="greenButton">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
  const tagsFilter = document.querySelector('.blog-tags-filter');
  const blogPosts = document.querySelectorAll('.main-blog-post, .blog-post-card');
  const tagButtons = document.querySelectorAll('.blog-tag');
  
  if (tagsFilter) {
    tagsFilter.addEventListener('click', function(e) {
      if (e.target.classList.contains('blog-tag')) {
        // Убираем активный класс у всех кнопок
        tagButtons.forEach(btn => btn.classList.remove('active'));
        // Добавляем активный класс нажатой кнопке
        e.target.classList.add('active');
        
        const selectedTag = e.target.getAttribute('data-tag');
        
        // Фильтруем посты
        blogPosts.forEach(post => {
          const postTags = post.getAttribute('data-tags').split(' ');
          
          if (selectedTag === 'all' || postTags.includes(selectedTag)) {
            post.style.display = 'flex';
          } else {
            post.style.display = 'none';
          }
        });
      }
    });
  }
  });
</script>

