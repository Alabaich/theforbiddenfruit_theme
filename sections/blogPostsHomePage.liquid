  {
    "name": "Blog Posts Homepage",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Latest from our blog"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Discover our latest news and articles"
      },
      {
        "type": "blog",
        "id": "blog",
        "label": "Blog"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Go To Blog"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Blog Posts Homepage",
        "category": "Blog"
      }
    ]
  }
{% endschema %}