<style>
  .foundational-nutrition {
    background-color: #fff;
  }

  .fn-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .fn-header-area {
    max-width: 60%;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .fn-preheading {
    color: #787878;
    font-family: Manrope;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .fn-description {
    color: #787878;
    font-family: Manrope;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .fn-benefits-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-top: 40px;
  }

  .benefit-card-item {
    display: block;
    position: relative;
    padding-top: 100%;
    text-decoration: none;
    overflow: hidden;
    border-radius: 8px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    transition: transform 0.3s ease;
  }

  .benefit-card-item:hover {
    transform: scale(1.01);
  }

  .benefit-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    color: #fff;
    z-index: 2;
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .benefit-card-title {
    color: #FFF;
    font-family: Manrope;
    font-size: 28px;
    font-style: normal;
    font-weight: 700;
    line-height: 110%;
    letter-spacing: -0.56px;
    text-transform: capitalize;
  }

  .benefit-card-text {
    color: #FFF;
    font-family: Manrope;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .benefit-card-item::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0) 60%);
    z-index: 1;
  }

  @media (max-width: 991px) {
    .fn-benefits-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .fn-benefits-grid {
      grid-template-columns: 1fr;
    }

    .fn-header-area {
      text-align: center;
    }

    .fn-header-area {
      max-width: 100%;
    }
  }
</style>

<div class="foundational-nutrition pageWidth">
  <div class="fn-grid">
    <div class="fn-header-area">
      {% if section.settings.preheading != blank %}
        <p class="fn-preheading">{{ section.settings.preheading }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="fn-heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="fn-description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <div class="fn-benefits-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'benefit' %}
            <a
              href="{{ block.settings.link_url }}"
              class="benefit-card-item"
              style="background-image: url('{{ block.settings.image | image_url: width: 800 }}');">
              <div class="benefit-card-content">
                <h3 class="benefit-card-title">{{ block.settings.title }}</h3>
                <p class="benefit-card-text">{{ block.settings.text }}</p>
              </div>
            </a>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Foundational Nutrition",
    "settings": [
      {
        "type": "text",
        "id": "preheading",
        "label": "Preheading",
        "default": "What Is Foundational Nutrition"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Foundational Nutrition Provides The Essential Nutrients Your Body Needs To Thrive Every Day"
      }, {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "A complete base of vitamins, minerals, phytonutrients, and probiotics designed to energize, balance, and strengthen your body from within. It supports:"
      }
    ],
    "blocks": [
      {
        "type": "benefit",
        "name": "Benefit Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Energy & Vitality"
          }, {
            "type": "textarea",
            "id": "text",
            "label": "Text",
            "default": "Fuel your body and mind for peak performance."
          }, {
            "type": "url",
            "id": "link_url",
            "label": "Card Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Foundational Nutrition Grid",
        "blocks": [
          {
            "type": "benefit",
            "settings": {
              "title": "Energy & Vitality",
              "text": "Fuel your body and mind for peak performance."
            }
          }, {
            "type": "benefit",
            "settings": {
              "title": "Immune Support",
              "text": "Strengthen your natural defenses."
            }
          }, {
            "type": "benefit",
            "settings": {
              "title": "Digestive Balance",
              "text": "Promote gut health and nutrient absorption."
            }
          }
        ]
      }
    ]
  }
{% endschema %}