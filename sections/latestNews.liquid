<style>
  .latest-news-section {
    display: flex;
    flex-direction: column;
    gap: 50px;
    align-items: center;
  }
  .latest-news-section h2 {
    color: #2c2d2c;
    text-align: center;
    font-family: Onest;
    font-size: 52px;
    font-style: normal;
    font-weight: 500;
    line-height: 110%;
    text-transform: capitalize;
  }

  .blog-posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 50px;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .blog-post-card {
    display: flex;
    flex-direction: column;
    gap: 15px;
    position: relative;
  }

  .post-image {
    width: 100%;
    height: 250px;
    border-radius: 10px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-image:hover img {
    transform: scale(1.05);
  }

  .post-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .post-title {
    font-family: 'Manrope'
    , sans-serif;
    font-size: 20px;
    font-weight: 600;
    margin: 0;
    padding-right: 80px;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 15px;
    font-family: 'Onest'
    , sans-serif;
    font-size: 14px;
    color: #616161;
    position: relative;
  }

  .post-date {
    margin: 0;
  }

  .read-time {
    position: absolute;
    top: 0;
    right: 0;
    margin: 0;
    color: #616161;
    font-family: 'Onest'
    , sans-serif;
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .blog-posts-grid {
      grid-template-columns: 1fr;
      gap: 25px;
    }
    .post-image {
      height: 200px;
    }
  }

</style>

<div class="latest-news-section pageWidth">
  <h2>{{ section.settings.title }}</h2>
  <div class="blog-posts-grid">
    {% for article in blogs[section.settings.blog].articles limit: 3 %}
      <article class="blog-post-card">
        <a href="{{ article.url }}" class="post-image">
          {% if article.image %}
            <img
              src="{{ article.image | img_url: '400x250' }}"
              alt="{{ article.title }}"
              loading="lazy">
          {% else %}
            <div style="background: #f0f0f0; height: 100%; display: flex; align-items: center; justify-content: center; border-radius: 10px;">
              <span>No image</span>
            </div>
          {% endif %}
        </a>
        <div class="post-content">
          <h3 class="post-title">
            <a href="{{ article.url }}" style="color: inherit; text-decoration: none;">
              {{ article.title }}
            </a>
          </h3>
          <div class="post-meta">
            <p class="post-date">{{ article.published_at | date: "%B %d, %Y" }}</p>
            <p class="read-time">{{ article.content | strip_html | number_of_words | divided_by: 200 | plus: 1 }} min read</p>
          </div>
        </div>
      </article>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Latest News",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Latest News"
      }, {
        "type": "blog",
        "id": "blog",
        "label": "Blog to display"
      }, {
        "type": "range",
        "id": "count",
        "label": "Number of articles",
        "min": 1,
        "max": 6,
        "step": 1,
        "default": 3
      }
    ],
    "presets": [
      {
        "name": "Latest News"
      }
    ]
  }
{% endschema %}