<style>
  .collections-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 50px;
    align-items: center;
  }

  .collections-heading {
    text-align: center;
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 20px;
    max-width: 1000px;
    width: 100%;
  }

  .collections-heading .subtitle {
    text-align: center;
    margin: 0;
  }

  .collections-background {
    display: flex;
    padding: 75px 25px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    align-self: stretch;
    position: relative;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 16px;
    max-width: 100%;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
    width: 100%;
  }

  .collection-card {
    display: flex;
    padding: 40px;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 30px;
    flex: 1 0 0;
    align-self: stretch;
    border-radius: 16px;
    opacity: 0.99;
    background: rgba(255, 255, 255, 0.80);
    text-align: center;
    min-height: 230px;
  }

  .collection-icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .collection-title {
    color: #2c2d2c;
    font-family: 'Onest'
    , sans-serif;
    font-size: 24px;
    font-weight: 500;
    margin: 0;
    line-height: 1.2;
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .collection-button {
    display: flex;
    padding: 15px 25px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    align-self: stretch;
    border-radius: 40px;
    background: #FFF;
    box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.25);
    color: #2c2d2c;
    font-family: 'Manrope'
    , sans-serif;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .collection-button:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 1200px) {
    .collections-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
  }

  @media (max-width: 968px) {
    .collections-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .collection-card {
      padding: 30px;
      gap: 20px;
      min-height: 250px;
    }

    .collections-background {
      padding: 50px 20px;
    }
  }

  @media (max-width: 768px) {
    .collections-section {
      gap: 30px;
    }

    .collection-card {
      padding: 25px;
      gap: 15px;
      min-height: 200px;
    }

    .collection-title {
      font-size: 20px;
    }

    .collection-button {
      padding: 12px 20px;
      font-size: 14px;
    }

    .collections-background {
      padding: 40px 15px;
    }
  }
</style>

<section class="collections-section pageWidth">
  <div class="collections-heading">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="collections-background" style="background-image: url('{{ section.settings.background_image | img_url: '2000x' }}');">
    <div class="collections-grid">
      {% for i in (1..4) %}
        {% assign collection_handle = 'collection_' | append: i %}
        {% assign collection = collections[section.settings[collection_handle]] %}
        {% assign title_setting = 'title_' | append: i %}
        {% assign button_text_setting = 'button_text_' | append: i %}
        {% assign icon_setting = 'icon_' | append: i %}

        <div class="collection-card">
          {% if section.settings[icon_setting] != blank %}
            <div class="collection-icon">
              {{ section.settings[icon_setting] }}
            </div>
          {% endif %}

          <h3 class="collection-title">
            {% if collection != blank %}
              {{ collection.title }}
            {% else %}
              {{ section.settings[title_setting] | default: 'Collection Title' }}
            {% endif %}
          </h3>

          <a href="{% if collection != blank %}{{ collection.url }}{% else %}#{% endif %}" class="collection-button">
            {{ section.settings[button_text_setting] | default: 'Shop Now' }}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

