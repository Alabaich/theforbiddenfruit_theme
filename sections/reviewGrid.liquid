<style>
  .review-grid-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 50px;
    align-items: center;
  }

  .review-grid-heading {
    text-align: center;
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 20px;
    max-width: 1000px;
    width: 100%;
  }

  .review-grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 50px;
    width: 100%;
  }

  .review-grid-container.four-column {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .review-card {
    display: flex;
    flex-direction: column;
    gap: 15px;
    padding: 25px;
    border-radius: 25px;
    background: #F3F3EC;
    align-items: center;
    min-height: 340px;
    justify-content: center;
    position: relative;
  }

  .review-rating {
    display: flex;
    align-items: center;
    margin-top: 15px;
  }

  .review-quote {
    color: #2C2D2C;
    text-align: center;
    font-family: Manrope;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.4px;
    text-transform: capitalize;
  }

  .review-author {
    color: #2C2D2C;
    font-family: Manrope;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.24px;
    text-transform: capitalize;
  }

  .review-verified {
    display: flex;
    align-items: center;
    gap: 5px;
    color: #717171;
    font-family: Manrope;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.24px;
    text-transform: capitalize;
  }

  @media (max-width: 768px) {
    .review-grid-container {
      grid-template-columns: 1fr;
    }
    .review-grid-container.four-column {
      grid-template-columns: 1fr;
    }
    .review-card {
      padding: 20px;
      min-height: 175px;
    }
  }
</style>

