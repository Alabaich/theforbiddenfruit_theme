<style>
  .section--intimacy-problem {
    background: #fff;
  }

  .grid {
    display: grid;
    gap: 50px;
  }

  .grid--2-col {
    grid-template-columns: 1fr 1fr;
  }

  .grid--reverse-on-mobile {
    align-items: center;
  }

  .grid__item--content-col {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 25px;
  }

  .section-subheading {
    color: #717171;
    font-family: Manrope;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.32px;
    margin: 0;
  }

  .section-tagline {
    color: #717171;
    font-family: Manrope;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    margin: 0;
  }

  .problem-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin: 0;
    padding: 0;
  }

  .problem-item {
    display: flex;
    align-items: flex-start;
    gap: 5px;
    padding: 0;
    flex-direction: column;
  }

  .problem-icon {
    flex-shrink: 0;
    width: 34px;
    height: 34px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .problem-icon svg {
    width: 24px;
    height: 24px;
  }

  .problem-icon svg g path {
    fill: var(--product-accent-color);
  }

  .problem-text {
    color: #202020;
    font-family: Manrope;
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    letter-spacing: -0.4px;
    text-transform: capitalize;
  }

  .image-wrap {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    height: 500px;
  }

  .image-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .image-wrap--placeholder {
    background: #f5f5f5;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
  }

  @media (max-width: 768px) {
    .grid--2-col {
      grid-template-columns: 1fr;
    }

    .grid--reverse-on-mobile {
      grid-template-areas: "content" "image";
    }

    .grid__item--content-col {
      grid-area: content;
      gap: 20px;
    }

    .grid__item--image-col {
      grid-area: image;
    }

    .section-heading {
      font-size: 36px;
    }

    .section--intimacy-problem {
      padding: 60px 0;
    }

    .image-wrap,
    .image-wrap--placeholder {
      height: 400px;
    }
  }

  @media (max-width: 480px) {
    .problem-text {
      font-size: 14px;
    }

    .container--narrow {
      padding: 0 16px;
    }

    .image-wrap,
    .image-wrap--placeholder {
      height: 300px;
    }
  }
</style>

{% assign heading = section.settings.heading %}
{% assign subheading = section.settings.sub_heading %}
{% assign tagline = section.settings.tagline %}
{% assign problem_items = section.settings.problems_list | newline_to_br | split: '<br />' %}

<section class="section section--intimacy-problem pageWidth" id="Section-{{ section.id }}" id="science">

  <div class="container container--narrow">
    <div class="grid grid--2-col grid--gap-large grid--reverse-on-mobile">

      <div class="grid__item grid__item--content-col">

        {% if subheading != blank %}
          <p class="section-subheading">{{ subheading }}</p>
        {% endif %}

        {% if heading != blank %}
          <h1 class="section-heading">{{ heading }}</h1>
        {% endif %}

        {% if tagline != blank %}
          <p class="section-tagline">{{ tagline }}</p>
        {% endif %}

        {% if problem_items.size > 0 %}
          <ul class="problem-list list-unstyled">
            {% for problem in problem_items %}
              {% assign problem_clean = problem | strip %}
              {% if problem_clean != blank %}
                <li class="problem-item">
                  <span class="problem-icon">
                    <svg
                      width="24"
                      height="24"
                      viewBox="0 0 32 32"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg">
