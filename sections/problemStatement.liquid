                        <clipPath id="clip0_324_3499">
                          <rect
                            width="32"
                            height="32"
                            fill="white" />
                        </clipPath>
                      </defs>
                    </svg>
                  </span>
                  <span class="problem-text">{{ problem_clean }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <div class="grid__item grid__item--image-col">
        {% if section.settings.image != blank %}
          <div class="image-wrap">
            <img
              src="{{ section.settings.image | img_url: '800x600', crop: 'center' }}"
              alt="{{ section.settings.image.alt | escape }}"
              loading="lazy"
              width="800"
              height="600">
          </div>
        {% else %}
          <div class="image-wrap image-wrap--placeholder">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</section>

