<style>
  .mn-hero-section {
    position: relative;
    max-width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 50px;
  }

  .mn-hero-heading {
    padding: 0 10%;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 1000px;
  }

  .mn-hero-heading h1 {
    color: #2c2d2c;
    font-family: 'Manrope'
    , sans-serif;
    margin: 0;
  }

  .mn-hero-heading .subtitle {
    font-family: 'Manrope'
    , sans-serif;
    margin: 0;
  }

  .mn-hero-content {
    position: relative;
    z-index: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 50px;
  }

  .mn-custom-blocks {
    display: flex;
    flex-direction: column;
    gap: 35px;
    width: 100%;
    padding: 0 20px;
    box-sizing: border-box;
  }

  .mn-custom-block {
    display: flex;
    align-items: center;
    gap: 15px;
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
  }

  .mn-custom-block svg {
    width: 32px;
    height: 32px;
    flex-shrink: 0;
  }

  .mn-custom-text {
    font-size: 16px;
    line-height: 1.4;
    color: #000;
    font-family: 'Manrope'
    , sans-serif;
    text-align: left;
    flex: 1;
  }

  .mn-custom-text strong {
    font-weight: 600;
  }

  .mn-custom-text em {
    font-style: italic;
  }

  .mn-custom-text u {
    text-decoration: underline;
  }

  .mn-bottom-text {
    color: #616161;
    font-family: 'Onest'
    , sans-serif;
    font-size: 20px;
    text-transform: capitalize;
    text-align: left;
    max-width: 100%;
    padding: 0 20px;
  }

  @media (max-width: 768px) {
    .mn-custom-blocks {
      padding: 0 15px;
      gap: 25px;
    }

    .mn-custom-text {
      font-size: 14px;
    }

    .mn-bottom-text {
      font-size: 20px;
      padding: 0 15px;
    }
  }

  @media (max-width: 769px) {
    .mn-hero-section {
      gap: 30px;
    }

    .mn-hero-heading {
      padding: 0 5%;
      gap: 15px;
    }

    .mn-custom-blocks {
      gap: 20px;
      padding: 0 10px;
    }

    .mn-custom-block {
      gap: 12px;
    }

    .mn-custom-block svg {
      width: 28px;
      height: 28px;
    }

    .mn-custom-text {
      font-size: 14px;
    }

    .mn-bottom-text {
      font-size: 16px;
      padding: 0 10px;
    }
  }
</style>

<div class="mn-hero-section pageWidth verticalPadding">
  <div class="mn-hero-heading">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="mn-hero-content">
    {% if section.blocks.size > 0 %}
      <div class="mn-custom-blocks">
        {% for block in section.blocks %}
          <div class="mn-custom-block" {{ block.shopify_attributes }}>
            {% if block.settings.custom_svg != blank %}
              {{ block.settings.custom_svg }}
            {% endif %}
            {% if block.settings.custom_text != blank %}
              <div class="mn-custom-text">{{ block.settings.custom_text }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.bottom_text != blank %}
      <div class="mn-bottom-text">
        {{ section.settings.bottom_text }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Missing Nutrients",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Main Title"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Your subtitle text here"
      }, {
        "type": "richtext",
        "id": "bottom_text",
        "label": "Bottom Text",
        "default": "<p>The standard modern diet, heavy in refined grains (white bread, pasta), processed meats, sugar, and unhealthy fats, is systematically stripped of the compounds listed above.</p>"
      }
    ],
    "blocks": [
      {
        "type": "custom_block",
        "name": "Custom Block",
        "settings": [
          {
            "type": "html",
            "id": "custom_svg",
            "label": "Custom SVG Icon",
            "info": "Paste SVG code here"
          }, {
            "type": "richtext",
            "id": "custom_text",
            "label": "Custom Text",
            "info": "Text with formatting options"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Missing Nutrients",
        "category": "Custom",
        "settings": {
          "heading": "Main Title",
          "subtitle": "Your subtitle text here"
        },
        "blocks": [
          {
            "type": "custom_block"
          }
        ]
      }
    ]
  }
{% endschema %}