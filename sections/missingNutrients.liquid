<style>
  .mn-hero-section {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .mn-hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    padding: 40px;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .mn-hero-content h1 {
    color: #2c2d2c;
    font-family: 'Manrope'
    , sans-serif;
  }

  .mn-hero-content .subtitle {
    font-family: 'Manrope'
    , sans-serif;
  }

  .mn-custom-blocks {
    display: flex;
    flex-direction: column;
    gap: 50px;
  }

  .mn-custom-block {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .mn-custom-block svg {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  .mn-custom-text {
    font-size: 16px;
    line-height: 1.4;
    color: #000;
    font-family: 'Manrope'
    , sans-serif;
    text-align: left;
    flex: 1;
  }

  .mn-custom-text strong {
    font-weight: 600;
  }

  .mn-custom-text em {
    font-style: italic;
  }

  .mn-custom-text u {
    text-decoration: underline;
  }
</style>

<div class="mn-hero-section pageWidth">
  <div class="mn-hero-content">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="mn-custom-blocks">
        {% for block in section.blocks %}
          <div class="mn-custom-block" {{ block.shopify_attributes }}>
            {% if block.settings.custom_svg != blank %}
              {{ block.settings.custom_svg }}
            {% endif %}
            {% if block.settings.custom_text != blank %}
              <div class="mn-custom-text">{{ block.settings.custom_text }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Missing Nutrients",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Main Title"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Your subtitle text here"
      }
    ],
    "blocks": [
      {
        "type": "custom_block",
        "name": "Custom Block",
        "settings": [
          {
            "type": "html",
            "id": "custom_svg",
            "label": "Custom SVG Icon",
            "info": "Paste SVG code here"
          }, {
            "type": "richtext",
            "id": "custom_text",
            "label": "Custom Text",
            "info": "Text with formatting options"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Missing Nutrients",
        "category": "Custom",
        "blocks": [
          {
            "type": "custom_block"
          }
        ]
      }
    ]
  }
{% endschema %}